                    <Border Grid.Row="4" Grid.Column="6"
                            Background="AliceBlue"
                            BorderBrush="Black" BorderThickness="0.5 0.5 0.25 0.25">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="4*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>

                            <Viewbox Grid.Row="0" Grid.Column="0">
                                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top"
                                           Margin="2" Text="1."/>
                            </Viewbox>
                            <Viewbox Grid.Row="1" Grid.Column="0"
                                     Grid.ColumnSpan="3" Margin="5">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Text=" " FontWeight="Bold"/>
                            </Viewbox>
                            <Viewbox Grid.Row="2" Grid.Column="2">
                                <CheckBox HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                          Margin="2"/>
                            </Viewbox>
                        </Grid>
                    </Border>
                    <Border Grid.Row="5" Grid.Column="6"
                            Background="AliceBlue"
                            BorderBrush="Black" BorderThickness="0.5 0.5 0.25 0.25">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="4*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>

                            <Viewbox Grid.Row="0" Grid.Column="0">
                                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top"
                                           Margin="2" Text="1."/>
                            </Viewbox>
                            <Viewbox Grid.Row="1" Grid.Column="0"
                                     Grid.ColumnSpan="3" Margin="5">
                                <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Text=" " FontWeight="Bold"/>
                            </Viewbox>
                            <Viewbox Grid.Row="2" Grid.Column="2">
                                <CheckBox HorizontalAlignment="Right" VerticalAlignment="Bottom"
                                          Margin="2"/>
                            </Viewbox>
                        </Grid>
                    </Border>
                    
                    <!-- #endregion -->
                    
                </Grid>

            </Grid>
            
        </Border>

        <Viewbox Grid.Row="1" Grid.Column="0">
            <TextBlock x:Name="EventDetailsLabel"/>
        </Viewbox>

        <Viewbox x:Name="SearchViewbox">
            <TextBox x:Name="SearchTextBox" Text="Pretrazi"
                     Margin="1"/>
        </Viewbox>

        <Viewbox x:Name="SearchResults" Grid.Row="1" Grid.Column="0"
                 Visibility="Hidden">
            <ListView/>
        </Viewbox>
        
        <!-- Apply & Revert buttons-->
        <Viewbox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                 HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right" VerticalAlignment="Center">
                
                <Button Content="Primeni izmene"
                        Margin="10" Padding="10"
                        Background="SlateGray" BorderBrush="Black" BorderThickness="1.5">

                </Button>

                <Button Content="Poništi izmene"
                        Margin="10" Padding="10"
                        Background="SlateGray" BorderBrush="Black" BorderThickness="1.5">

                </Button>
                
            </StackPanel>
        </Viewbox>

        <!-- Add/Edit/Delete events-->
        <Viewbox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                 HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal" Margin="20">
                
                <Button x:Name="AddEventButton"
                        Background="Transparent" BorderBrush="Transparent"
                        Margin="20" ToolTip="Dodaj događaj">
                    <Image Source="Resources/PlusSign.png"/>
                </Button>

                <Button x:Name="EditEventButton"
                        Background="Transparent" BorderBrush="Transparent"
                        Margin="20" ToolTip="Izmeni događaj">
                    <Image Source="Resources/PencilSign.png"/>
                </Button>

                <Button x:Name="DeleteEventButton"
                        Background="Transparent" BorderBrush="Transparent"
                        Margin="20" ToolTip="Obriši događaj">
                    <Image Source="Resources/TrashBinIcon.png"/>
                </Button>
                
            </StackPanel>
        </Viewbox>
        
    </Grid>
    
</Window>
