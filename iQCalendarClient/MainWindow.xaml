                <Button x:Name="RightArrowButton" Grid.Row="0" Grid.Column="7"
                        BorderBrush="SlateGray" Background="SlateGray"
                        Cursor="Hand" ToolTip="Sledeći mesec">
                    <Image Source="Resources/RightArrow.png"/>
