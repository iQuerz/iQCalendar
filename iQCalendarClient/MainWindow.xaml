                <Button x:Name="LeftArrowButton" Grid.Row="0" Grid.Column="0"
                        BorderBrush="SlateGray" Background="SlateGray"
                        Cursor="Hand" ToolTip="Prošli mesec">
                    <Image Source="Resources/LeftArrow.png"/>
                </Button>

                <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="5"
                        Background="SlateGray">
                    
                    <Viewbox>
                        <TextBlock x:Name="MonthLabel" Text="Februar"/>
                    </Viewbox>
